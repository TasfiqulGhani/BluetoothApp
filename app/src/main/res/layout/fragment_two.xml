<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frag2"
    tools:context="info.androidhive.materialtabs.fragments.OneFragment"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"

            >
            <FrameLayout
                android:id="@+id/youtube_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt1"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lastekaitse Liidu koolitaja ja psühholoog Auli Andersalu-Targo annab nõu, kuidas toetada vanemana oma last, kui laps väidab, et teised lapsed ei kaasa teda oma tegevustesse. "
                android:textColor="#0F5160"
                android:textSize="16sp"

                />

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"

            >
            <FrameLayout
                android:id="@+id/youtube_layout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt2"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lastekaitse Liidu koolitaja ja gestaltpsühhoterapeut Merit Lage annab nõu, kuidas toetada kiusamisolukorras oma last ning kuidas kaasta sellesse protsessi ka õpetaja. "
                android:textColor="#0F5160"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"

            >
            <FrameLayout
                android:id="@+id/youtube_layout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt3"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lastekaitse Liidu koolitaja ja psühholoog Auli Andersalu-Targo annab nõu, kuidas toetada oma last, kui ta arvab teistest halvasti ja ei soovi nendega sõber olla. "
                android:textColor="#0F5160"
                android:textSize="16sp"

                />

        </LinearLayout>


        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="7dp"
            android:paddingBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"

            >
            <FrameLayout
                android:id="@+id/youtube_layout4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:visibility="visible" />

            <TextView
                android:id="@+id/txt4"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lastekaitse liidu koolitaja ja gestaltpsühhoterapeut Merit Lage annab nõu, kuidas kaasata lastevaheliste suhete kujundamisse teised lapsevanemad. "
                android:textColor="#0F5160"
                android:textSize="16sp"
                />

        </LinearLayout>


    </LinearLayout>



</ScrollView>

