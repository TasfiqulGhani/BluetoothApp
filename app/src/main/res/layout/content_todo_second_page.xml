<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"



    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".35"
        android:background="#708BB7"
        android:orientation="horizontal"
        >



        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageButton

                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:background="@color/colorPrimary"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            >
            <ImageView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:src="@drawable/toolbar"/>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >
            <ImageButton
                android:layout_centerInParent="true"
                android:id="@+id/settings_button"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/settings_button"
                />
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".34"
        android:background="#eaf678"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#a1e342"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Todo"
                android:textColor="#0F515F"
                android:background="@drawable/as_not"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/button2"
                android:text="Todo"
                android:textColor="#0F515F"
                android:background="@drawable/as"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#AAA777"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Todo"
                android:background="@drawable/as_not"
                android:textColor="#0F515F"
                />
        </LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#FFFFFF"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:background="#FFFFFF"
            android:orientation="vertical"
            >

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_marginTop="5dp"
                android:id="@+id/circularProgressbar"
                android:layout_width="180dp"
                android:layout_height="180dp"
                style="?android:attr/progressBarStyleHorizontal"
                android:indeterminate="false"
                android:progress="100"
                android:max="100"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"

                android:secondaryProgress="100"
                android:progressDrawable="@drawable/circleprogress" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:00"
                android:id="@+id/timer"
                android:textSize="22dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:background="#FFFFFF"
            android:orientation="vertical"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:textSize="20dp"
            android:id="@+id/tcount"
            android:textColor="@color/TextTodoTitle"
            android:layout_marginBottom="10dp"
            android:layout_height="wrap_content"
            android:text="40%"

            />
        <ProgressBar
            android:id="@+id/progressbar1"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
        </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="100"
        android:layout_marginBottom="5dp"
        >
        <ExpandableListView
            android:id="@android:id/list"
            android:fastScrollEnabled="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"></ExpandableListView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal"
            android:layout_marginBottom="6dp"
            android:layout_gravity="center"
            >
        <Button
            android:id="@+id/lopeta"
            android:layout_width="150dp"
            android:layout_height="60dp"
android:text="Clear"
            android:onClick="lopeta"
            style="?android:attr/borderlessButtonStyle"
            android:background="@color/colorPrimary"
            android:layout_gravity="center"
            />

        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".34"
        android:background="@color/button"
        android:orientation="horizontal"

        >
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/linBottomOne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/bottomone"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/bulb_blue"
                android:textColor="#FFFFFF"
                android:layout_marginTop="5dp"

                />
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/linBottomTwo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:backgroundTint="@color/buttonOnClick"
            android:background="@color/button"
            android:orientation="vertical"
            >
            <Button
                android:layout_centerInParent="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/bottomtwo"
                android:layout_marginTop="5dp"
                android:background="@drawable/todo_green"
                />
        </RelativeLayout>
        <RelativeLayout
            android:clickable="true"
            android:id="@+id/linBottomThree"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/button"
            android:orientation="vertical"

            >
            <Button
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:background="@drawable/trophy_blue"
                android:id="@+id/bottomthree"
                android:layout_marginTop="5dp"
                android:textColor="#FFFFFF"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
